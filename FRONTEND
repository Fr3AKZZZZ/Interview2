                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
        }

        /* Shopping Cart Counter */
        .cart-counter {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #ff6b6b;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            transform: scale(0);
            transition: transform 0.3s ease;
        }

        .cart-counter.show {
            transform: scale(1);
            animation: bounce 0.5s ease;
        }

        @keyframes bounce {
            0%, 20%, 53%, 80%, 100% { transform: scale(1); }
            40%, 43% { transform: scale(1.3); }
